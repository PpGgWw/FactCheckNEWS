{
  "manifest_version": 3,
  "name": "뉴스 팩트체크 분석기 (Gemini)",
  "version": "2.0",
  "description": "네이버, 다음 뉴스 기사를 분석하여 Gemini API를 통해 진위 여부를 판단합니다.",
  "icons": {
    "48": "icon48.png"
  },
  "permissions": [
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://*.naver.com/*",
    "https://*.daum.net/*",
    "https://*.daumcdn.net/*",
    "https://*.chosun.com/*",
    "https://*.donga.com/*",
    "https://*.joins.com/*",
    "https://*.hani.co.kr/*",
    "https://*.khan.co.kr/*",
    "https://*.mt.co.kr/*",
    "https://*.mk.co.kr/*",
    "https://*.sedaily.com/*",
    "https://*.hankyung.com/*",
    "https://*.newsway.co.kr/*",
    "https://*.yna.co.kr/*",
    "https://*.ytn.co.kr/*",
    "https://*.jtbc.co.kr/*",
    "https://*.sbs.co.kr/*",
    "https://*.kbs.co.kr/*",
    "https://*.mbc.co.kr/*",
    "https://*.ohmynews.com/*",
    "https://*.pressian.com/*",
    "https://*.newspim.com/*",
    "https://*.edaily.co.kr/*",
    "https://*.heraldcorp.com/*",
    "https://*.seoul.co.kr/*",
    "https://*.kmib.co.kr/*",
    "https://*.newsis.com/*",
    "https://*.news1.kr/*",
    "https://*.fnnews.com/*",
    "https://*.asiae.co.kr/*",
    "https://*.ajunews.com/*",
    "https://*.etnews.com/*",
    "https://*.dt.co.kr/*",
    "https://*.zdnet.co.kr/*",
    "https://*.bloter.net/*",
    "https://*.example.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://n.news.naver.com/article/*",
        "https://n.news.naver.com/mnews/*",
        "https://news.daum.net/*",
        "https://v.daum.net/*",
        "https://v.daum.net/v/*"
      ],
      "js": [
        "parsers/naver-parser.js",
        "parsers/daum-parser.js",
        "components/AnalysisPanel.js",
        "components/AnalysisBlock.js", 
        "components/VerdictBlock.js",
        "components/EvidenceBlock.js",
        "components/AnalysisDetailBlock.js",
        "content_script.js"
      ],
      "css": ["panel/tailwind.css"]
    }
  ]
}